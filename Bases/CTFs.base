views:
  - type: list
    name: CTFs
    filters:
      and:
        - file.inFolder("CTFs")
    groupBy:
      property: Category
      direction: ASC
    order:
      - file.name
      - Platform
      - Difficulty
      - status
      - Category
    sort:
      - property: file.name
        direction: ASC
    indentProperties: false
    separator: "| "
